<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dokkan_summon_background"
    android:isScrollContainer="false"
    tools:context=".dokkan_summon">

    <ImageView
        android:id="@+id/slot1"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginEnd="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/slot3"
        app:layout_constraintEnd_toStartOf="@+id/slot2"
        app:layout_constraintTop_toTopOf="@+id/slot3"
        app:srcCompat="@drawable/1008100" />

    <ImageView
        android:id="@+id/slot2"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginEnd="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/slot3"
        app:layout_constraintEnd_toStartOf="@+id/slot3"
        app:layout_constraintTop_toTopOf="@+id/slot3"
        app:srcCompat="@drawable/1008100" />

    <ImageView
        android:id="@+id/slot3"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single_button"
        app:srcCompat="@drawable/1008100" />

    <ImageView
        android:id="@+id/slot4"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginStart="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/slot3"
        app:layout_constraintStart_toEndOf="@+id/slot3"
        app:layout_constraintTop_toTopOf="@+id/slot3"
        app:srcCompat="@drawable/1008100" />

    <ImageView
        android:id="@+id/slot5"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginStart="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/slot3"
        app:layout_constraintStart_toEndOf="@+id/slot4"
        app:layout_constraintTop_toTopOf="@+id/slot3"
        app:srcCompat="@drawable/1008100" />

    <ImageView
        android:id="@+id/slot6"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginEnd="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/slot8"
        app:layout_constraintEnd_toStartOf="@+id/slot7"
        app:layout_constraintTop_toTopOf="@+id/slot8"
        app:srcCompat="@drawable/1008100" />

    <ImageView
        android:id="@+id/slot7"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginEnd="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/slot8"
        app:layout_constraintEnd_toStartOf="@+id/slot8"
        app:layout_constraintTop_toTopOf="@+id/slot8"
        app:srcCompat="@drawable/1008100" />

    <ImageView
        android:id="@+id/slot8"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/slot3"
        app:layout_constraintStart_toStartOf="@+id/slot3"
        app:layout_constraintTop_toBottomOf="@+id/slot3"
        app:srcCompat="@drawable/1008100" />

    <ImageView
        android:id="@+id/slot9"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginStart="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/slot8"
        app:layout_constraintStart_toEndOf="@+id/slot8"
        app:layout_constraintTop_toTopOf="@+id/slot8"
        app:srcCompat="@drawable/1008100" />

    <ImageView
        android:id="@+id/slot10"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginStart="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/slot8"
        app:layout_constraintStart_toEndOf="@+id/slot9"
        app:layout_constraintTop_toTopOf="@+id/slot8"
        app:srcCompat="@drawable/1008100" />

    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="371dp"
        android:layout_height="223dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.175"
        app:srcCompat="@drawable/dokkan_festival_8430" />

    <ImageButton
        android:id="@+id/single_button"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_image"
        app:srcCompat="@drawable/dokkan_single_summon" />

    <ImageButton
        android:id="@+id/multi_button"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/single_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/single_button"
        app:srcCompat="@drawable/dokkan_multi_summon" />

    <Spinner
        android:id="@+id/dropdown"
        android:layout_width="262dp"
        android:layout_height="21dp"
        android:layout_marginBottom="10dp"
        android:background="#CE5E5757"
        android:dropDownWidth="wrap_content"
        android:entries="@android:array/phoneTypes"
        android:fontFamily="@font/holtwood_one_sc"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/banner_image"
        app:layout_constraintEnd_toEndOf="@+id/banner_image"
        app:layout_constraintStart_toStartOf="@+id/banner_image" />

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_home_button" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="37dp"
        android:layout_height="42dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/dragon_stone" />

    <TextView
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/archivo_black"
        android:text="Reset"
        android:textColor="#FF0000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/summon_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_black"
        android:text="Summon History"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/home_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slot8" />

    <TextView
        android:id="@+id/stones_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/archivo_black"
        android:gravity="center"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#F4F4F4"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        app:autoSizeMinTextSize="5sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <ImageButton
        android:id="@+id/volume_control"
        android:layout_width="37dp"
        android:layout_height="29dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/no_mute" />

</androidx.constraintlayout.widget.ConstraintLayout>