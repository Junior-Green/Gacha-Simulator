<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dokkan_home"
    android:configChanges="keyboardHidden"
    android:screenOrientation="portrait">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="169dp"
        android:layout_height="181dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:contentDescription="@android:string/untitled"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/play_button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="375dp"
        android:layout_height="163dp"
        android:fontFamily="@font/holtwood_one_sc"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/play"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="110sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="PLAY" />

    <ImageView
        android:id="@+id/app"
        android:layout_width="210dp"
        android:layout_height="162dp"
        android:adjustViewBounds="true"
        android:contentDescription="@android:string/untitled"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:srcCompat="@drawable/dokkan_app_icon" />

    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:contentDescription="@android:string/untitled"
        android:scaleType="fitCenter"
        android:onClick="selectRight"
        app:layout_constraintBottom_toBottomOf="@+id/app"
        app:layout_constraintStart_toEndOf="@+id/app"
        app:layout_constraintTop_toTopOf="@+id/app"
        app:srcCompat="@drawable/ic_ios_arrow" />

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:contentDescription="@android:string/untitled"
        android:scaleType="fitCenter"
        android:scaleX="-1"
        android:onClick="selectLeft"
        app:layout_constraintBottom_toBottomOf="@+id/app"
        app:layout_constraintEnd_toStartOf="@+id/app"
        app:layout_constraintTop_toTopOf="@+id/app"
        app:srcCompat="@drawable/ic_ios_arrow" />
</androidx.constraintlayout.widget.ConstraintLayout>